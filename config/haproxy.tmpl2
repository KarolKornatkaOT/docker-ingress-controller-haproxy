global
    log 127.0.0.1:514 local0
    spread-checks 50
    maxconn 100000

defaults
    log global
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

listen stats
    bind *:1937
    mode http
    stats enable
    stats hide-version
    stats realm Haproxy\ Statistics
    stats uri /
    stats auth myUser:myPassword
    stats refresh 3s
